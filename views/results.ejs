<!DOCTYPE html>
<html lang="en">
    <%- include("./partials/head.ejs", { title: locals.title }) %>
    <body>
        <%- include('./partials/nav.ejs') %>
        <div>
            <form action="/search" method="POST">
                <b> Returned Procedures: </b></br> 
                <% if (locals.data && locals.data.length) { %>
                    <% locals.data.forEach(procedure => { %>
                        <b><%= procedure.name %> <%= procedure.billing_number %></b><br>
                    <% }); %>
                <% } else { %>
                    <p>Data not found</p>
                <% } %>
                <button><a href="/search">Return to Search menu</a></button>
            </form>
        </div>
    </body>
</html>
